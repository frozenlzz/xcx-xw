/* pages/test/test.wxss */
#title {
  display:flex;
  align-items: center;
  /* padding:0 30rpx; */
  width:100%;
  height:360rpx;
  background:#40454d;
}
.show{
  font-size:28rpx;
  color:#ddd;
}
.show > view {
  padding-bottom:10rpx;
}
.conTitle {
  position: relative;
  padding:20rpx 20rpx 0 20rpx;
  color:#FFA500;
  font-size:38rpx;
  white-space: nowrap;
  overflow: hidden;
}
.mindv {
  position:absolute;
  left:0;
  top:25rpx;
  width:15rpx;
  height:55rpx;
  background:#FFA500;
}
.dv {
  width:100%;
  height:20rpx;
  background:#ddd;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
}
.content {
  padding:20rpx;
  font-size:30rpx;
  color:#000;
}
.cat > text {
  display:inline-block;
  vertical-align: bottom;
  font-size:20rpx;
  color:#fff;
  border:1px solid #fff;
  border-radius:5rpx;
  max-width:157rpx;
  white-space:nowrap;
  overflow:hidden;
}