/* pages/me/me.wxss */
page{
  background:#ddd;
}
#pic {
  height:180px;
  display:flex; 
  flex-direction:column;
  align-items: center;
  justify-content: center; 
  background:#EE2C2C;
}
.dingdan {
  margin:10px 0;
  height:100%;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  background:#fff;
}
.ddtitle {
  position:relative;
  height:20px;
  width:150px;
  margin:0 auto;
  border-bottom:1px solid #ccc;
}
.ddtitle > view {
  position:absolute;
  bottom:-10px;
  left:36px;
  padding:0 10px;
  background:#fff;
  text-align:center;
  font-size:14px;
}
.ddlist {
  margin-top:20px;
  height:100px;
  display:flex;
  justify-content: space-around;
}

#fuli,#like {
  margin-bottom:10px;
  padding:0 10px;
  height:100%;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  background: #fff;
  font-size:14px;
  letter-spacing:2px;
}
.fllist {
  height:50px;
  line-height:50px;
}