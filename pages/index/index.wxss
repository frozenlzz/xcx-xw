/**index.wxss**/
#container {
  width:100%;
}
.nav{
  width:100%;
  height:90rpx;
  background:#fff;
  border-bottom:1rpx solid #ddd;
  /* z-index:1; */
}
.search {
  float:left;
  width:97rpx;
  height:90rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.search > image {
  display:inline-block;
  height:40rpx;
  width:40rpx;
}

.menu {
  float:left;
  width:465rpx;
  height:90rpx;
  border-right:1px solid #ddd;
  white-space:nowrap;
}
.menu .item {
  display:inline-block;
  font-size:32rpx;
  height:84rpx;
  line-height:84rpx;
  width:65rpx;
  margin-right:35rpx;
}
.add, .profile {
  float:left;
  width:95rpx;
  height:90rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}
.active {
  color:#d43d3d;
  border-bottom:6rpx solid #d43d3d;
}

#content .item{
  display:flex;
  min-height:100rpx;
  border-bottom: 1px solid #ddd;
  padding:40rpx 0rpx;
}
#content .item .left{
  display:flex;
  flex-direction: column;
  justify-content:space-between;
  flex:2;
  padding-right:15rpx;
}
#content .item .left .title {
  font-size:30rpx;
  /* font-weight: bold; */
}
#content .item .left .ref {
  font-size: 24rpx;
  color:#ccc;
}
#content .item .right {
  flex:1;
  font-size:0;
}
#content .swiper{
  box-sizing:border-box;
  padding:0rpx 30rpx;
}